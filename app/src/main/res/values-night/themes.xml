<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    auth style-->
    <style name="bg_auth">
        <item name="android:src">@drawable/bg_dark_auth</item>
    </style>

    <!-- Base application theme. -->
    <style name="title" parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="sub_title" parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_regular</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="title_list" parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_bold</item>
        <item name="android:textColor">@color/text_item_color_primary</item>
    </style>

    <style name="sub_title_list" parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_regular</item>
        <item name="android:textColor">@color/text_item_color_secondary</item>
    </style>

    <style name="shape_style" parent="Theme.DiscoverMada.Light">
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="web_view" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/all_background_color</item>
    </style>

    <style name="image_item_corner" parent="Theme.DiscoverMada.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SCREEN" parent="Theme.DiscoverMada.Light">
        <item name="android:background">@color/all_background_color</item>
    </style>

    <style name="SPLASH_SCREEN" parent="Theme.DiscoverMada.Light">
        <item name="android:background">@color/all_background_color</item>
    </style>

    <style name="buton_round" parent="Theme.DiscoverMada.Light">
        <item name="background">@drawable/round_radius_contenair</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/text_item_color_primary</item>
    </style>

    <style name="Widget.App.Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="android:background">@color/background_item_color</item>
        <item name="fontFamily">@font/popin_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="titleTextColor">@color/text_item_color_primary</item>
        <item name="tint">@color/text_item_color_primary</item>
        <item name="android:textColor">@color/text_item_color_primary</item>
        <item name="android:editTextColor">@color/text_item_color_primary</item>
        <item name="android:textColorHint">@color/text_item_color_primary</item>
        <item name="colorSurface">@color/colorWhite</item>
    </style>

    <style name="icon_app">
        <item name="color">@color/icon_color</item>
    </style>

    <style name="Theme.DiscoverMada.Light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="ThemeOverlay.DiscoverMada.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>