<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="title" parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="sub_title"  parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_regular</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>
    <style name="title_list"   parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_bold</item>
        <item name="android:textColor">@color/text_item_color_primary</item>
    </style>
    <style name="sub_title_list"  parent="Theme.DiscoverMada.Light">
        <item name="fontFamily">@font/popin_regular</item>
        <item name="android:textColor">@color/text_item_color_secondary</item>
    </style>
    <style name="shape_style" parent="Theme.DiscoverMada.Light">
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="web_view" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/all_background_color</item>
    </style>

    <style name="image_item_corner" parent="Theme.DiscoverMada.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SCREEN" parent="Theme.DiscoverMada.Light">
        <item name="android:background">@color/all_background_color</item>
    </style>

    <style name="SPLASH_SCREEN" parent="Theme.DiscoverMada.Light">
        <item name="android:background">@color/all_background_color</item>
    </style>

    <style name="Widget.App.Toolbar" parent="@style/Widget.Material3.Toolbar" >
        <item name="android:background">@color/background_item_color</item>
        <item name="fontFamily">@font/popin_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_item_color_primary</item>
    </style>

    <style name="icon_app" >
        <item name="color">@color/icon_color</item>
    </style>

    <style name="Theme.DiscoverMada.Light" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
</resources>